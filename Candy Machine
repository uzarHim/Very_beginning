    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const tabButtons = document.querySelectorAll(".tab-button");
            const tabContents = document.querySelectorAll(".tab-content");
            const dateInput = document.getElementById('report_date');

            function activateTab(tabName) {
                tabButtons.forEach(btn => btn.classList.toggle("active", btn.dataset.tab === tabName));
                tabContents.forEach(content => content.classList.toggle("active", content.id === tabName));
            }

            tabButtons.forEach(button => {
                button.addEventListener("click", () => {
                    const tabName = button.dataset.tab;
                    sessionStorage.setItem('activeTab', tabName);
                    activateTab(tabName);
                });
            });

            const savedTab = sessionStorage.getItem('activeTab') || 'sraMonitoring';
            activateTab(savedTab);

            const getPreviousBusinessDay = () => {
                const date = new Date();
                date.setDate(date.getDate() - 1);
                while (date.getDay() === 0 || date.getDay() === 6) { date.setDate(date.getDate() - 1); }
                const year = date.getFullYear();
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const day = String(date.getDate()).padStart(2, '0');
                return `${year}-${month}-${day}`;
            };
            
            if (!dateInput.value) {
                dateInput.value = getPreviousBusinessDay();
            }

            document.querySelectorAll('form').forEach(form => {
                form.addEventListener('submit', () => {
                    const activeTabInput = document.createElement('input');
                    activeTabInput.type = 'hidden';
                    activeTabInput.name = 'active_tab';
                    activeTabInput.value = sessionStorage.getItem('activeTab') || 'sraMonitoring';
                    form.appendChild(activeTabInput);

                    if (!form.querySelector('input[name="report_date"]')) {
                        const hiddenDateInput = document.createElement('input');
                        hiddenDateInput.type = 'hidden';
                        hiddenDateInput.name = 'report_date';
                        hiddenDateInput.value = dateInput.value;
                        form.appendChild(hiddenDateInput);
                    }
                });
            });

            document.querySelector('.main-content').addEventListener('click', function(event) {
                const trigger = event.target.closest('.collapsible-trigger');
                if (trigger) {
                    trigger.classList.toggle("active");
                    const content = trigger.nextElementSibling;
                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                    } else {
                        content.style.maxHeight = content.querySelector('div').scrollHeight + "px";
                    }
                }
                const downloadBtn = event.target.closest('.download-btn');
                if (downloadBtn) {
                    let csvContent = "";
                    const resultContainer = downloadBtn.closest('.results-output');
                    const escapeCsvCell = (cell) => {
                        if (cell.includes(',') || cell.includes('"') || cell.includes('\n')) {
                            return `"${cell.replace(/"/g, '""')}"`;
                        }
                        return cell;
                    };
                    if (resultContainer.querySelector('.collapsible-trigger')) {
                        let rows = [["Result Type", "Details"]];
                        resultContainer.querySelectorAll('.collapsible').forEach(coll => {
                            const title = coll.querySelector('.collapsible-trigger span').textContent.trim();
                            const content = coll.querySelector('.collapsible-content div').innerHTML;
                            rows.push([escapeCsvCell(title), escapeCsvCell(content)]);
                        });
                        csvContent = rows.map(e => e.join(",")).join("\n");
                    } else {
                        const preElement = resultContainer.querySelector('pre');
                        if (preElement) {
                           csvContent = escapeCsvCell(preElement.textContent.trim());
                        }
                    }
                    const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                    const link = document.createElement('a');
                    link.href = URL.createObjectURL(blob);
                    link.download = `TSR_Result_${new Date().toISOString().split('T')[0]}.csv`;
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                }
            });
        });
    </script>
</body>
</html>
