or(
  and(equals(mod(int(formatDateTime(utcNow(),'MM')),3),0), greaterOrEquals(int(formatDateTime(utcNow(),'dd')),15)),
  equals(dayOfWeek(utcNow()),1)
)


Filter(QuarterlyTrainingTracker, 'Manager''s Name'.Email = User().Email || 'Employee Name'.Email = User().Email)

ThisItem.Status.Value = "Completed"

Patch(QuarterlyTrainingTracker, ThisItem, {Status: {Value: "Completed"}})

Patch(QuarterlyTrainingTracker, ThisItem, {Status: {Value: "Pending"}})
